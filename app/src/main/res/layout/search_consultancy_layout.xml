<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:textSize="18sp"
        android:textColor="@color/appColor"
        android:text="Eduardo Alberto Hernández Chávez"
        android:background="@color/white"
        android:id="@+id/tv_search_name"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_marginLeft="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:text="Criptografía"
            android:background="@color/white"
            android:id="@+id/tv_search_summary"
            android:gravity="left|center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:layout_marginRight="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:text="7:00 - 7:50"
            android:background="@color/white"
            android:id="@+id/tv_search_hour"
            android:gravity="left|center"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/appColor"
        android:background="@drawable/border_buttoms"
        android:text="Agendar cita"/>

</LinearLayout>