<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OverviewLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/appColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="OverviewAppIcon">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <style name="OverviewAppName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GeneralButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
